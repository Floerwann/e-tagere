// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  username String
  email    String  @unique // L'email doit être unique
  password String  // Le mot de passe sera stocké crypté
  movies   Movie[]
  vinyls   Vinyl[]
  tvshows  TvShow[]
}

model Movie {
  id          Int      @id @default(autoincrement())
  tmdbId      Int
  title       String
  posterPath  String?
  overview    String?  @db.Text
  releaseDate String?
  
  format      String   // Le format principal (La boîte)
  
  // NOUVEAU : Les disques inclus en plus
  includeBluray Boolean @default(false) 
  includeDvd    Boolean @default(false)

  isSteelbook Boolean  @default(false)
  isSlipcover Boolean  @default(false)
  edition     String? 

  addedAt     DateTime @default(now())
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
}

model TvShow {
  id          Int      @id @default(autoincrement())
  tmdbId      Int
  title       String
  posterPath  String?
  backdropPath String?
  overview    String?  @db.Text
  releaseDate String?
  
  objectType  String   // "INTEGRALE", "SAISON", "COFFRET"
  
  // NOUVEAU : Champ dédié au numéro de la saison
  seasonNumber Int?    // Le "?" veut dire que c'est optionnel (pas besoin pour une Intégrale)

  format        String
  includeBluray Boolean @default(false)
  includeDvd    Boolean @default(false)
  isSteelbook   Boolean @default(false)
  isSlipcover   Boolean @default(false)
  edition       String? 

  addedAt     DateTime @default(now())
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
}

// Ajoute le nouveau modèle à la fin du fichier
model Vinyl {
  id          Int      @id @default(autoincrement())
  
  // INFOS PRINCIPALES (Viennent de la recherche)
  tmdbId      Int?     // ID Discogs (on l'appelle tmdbId pour garder la logique, ou discogsId)
  artist      String
  title       String   // Nom de l'album
  coverUrl    String?  // L'URL de l'image (modifiable par l'utilisateur !)
  
  // DATES
  originalYear String? // Année de l'album (ex: 2013)
  pressingYear String? // Année de TON disque (ex: 2023)

  // INFOS TECHNIQUES
  format      String   // LP, EP, Single, Coffret
  rpm         String?  // 33T, 45T
  color       String?  // Noir, Blanc, Splatter...
  
  // INFOS COLLECTIONNEUR
  label       String?  // Columbia, Sony Music...
  catalogNumber String? // Le code sur la tranche (ex: 19658775831)
  condition   String?  // Mint, VG+, Good...
  edition     String?  // "10th Anniversary", "Originale", "Japonaise"...

  // SYSTEME
  addedAt     DateTime @default(now())
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
}